<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".presentation.signup.view.SignupActivity">

    <Button
        android:id="@+id/sign_agree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/easy_48"
        android:layout_marginEnd="@dimen/easy_48"
        android:layout_marginBottom="@dimen/easy_48"
        android:background="@drawable/bg_contrast"
        android:text="Registrar"
        android:textColor="@color/contrastText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/sign_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/easy_48"
        android:layout_marginEnd="@dimen/easy_48"
        android:layout_marginBottom="@dimen/easy_32"
        android:background="@drawable/bg_input"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/easy_16"
        android:paddingEnd="@dimen/easy_16"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/sign_agree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>