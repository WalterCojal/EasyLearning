<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".presentation.login.view.LoginStatusFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fls_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/easy_8"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/primaryText"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fls_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/easy_8"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/primaryText"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fls_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/easy_4"
                android:layout_weight="1"
                android:background="@drawable/bg_primary"
                android:text="Button"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/fls_agree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/easy_4"
                android:layout_weight="1"
                android:background="@drawable/bg_primary"
                android:text="Button"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>